{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "types": [
        // add node as an option
        "node"
      ],
      // typeRoots option has been previously configured
      "typeRoots": [
        // add path to @types
        "node_modules/@types"
      ]
  },

  "exclude": [
    "dist",
    "node_modules",
    "typings"
  ]
}

